// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String  @unique
  name  String?
  address String?
  password String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  UserTokens UserTokens[]
}

model UserTokens {
  id    String @id @default(uuid())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model Product {
  id    String @id @default(uuid())
  name  String
  urlName String
  picture String?
  basePrice Decimal
  discountPercentage Int @default(0)
  stock Int
  description String?
  createdAt  DateTime  @default(now())

  categories Category[]
  urchases Purchase[]
}

model Category {
  id    String @id @default(uuid())
  name  String

  products Product[]
}

model Purchase {
  id    String @id @default(uuid())

  user User @relation()
  //campo de relacionamento

  product Product @relation()
  //campo de relacionamento

  amount Int
  totalPrice Decimal
  reviewNote Int?
  reviewComment String?
  createAt DateTime @default(now())

  



}


enum Role {
  ADMIN
  USER
}
